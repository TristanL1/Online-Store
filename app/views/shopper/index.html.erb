<h1> Product Catalog </h1>
<% @products.each do |product| %>
<div class="block">
    <%= link_to image_tag(product.image), individual_path(product: product) %>
    <h3 class="entry"><%= product.name %></h3>
        <p class="desc"><%= product.description %></p><br><br>
        <b class="price">$<%= product.price %></b>
        <%= button_to "Add to Cart", lineitems_path(product_id: product), remote: true, class: "add" %>
        <br><br>
</div>
<% end %>